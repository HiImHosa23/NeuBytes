html
    head
        title NeuBytes
        link(rel="stylesheet", href="site.css")
        script(src="site.js" defer)
        style.
            *{
                font-family: 'Poppins', sans-serif;
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body{
                min-heigt: 100vh;
                background: whitesmoke;
            }
            .header{
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                padding: 20px 100px;
                background-color: transparent;
                display: flex;
                justify-content: space-between;
                align-items: center;
                z-index: 100;
            }
            .logo{
                font-size: 32px;
                color: #ff7f51;
                text-decoration: none;
                font-weight: 700;
            }
            .navbar a{
                position: relative;
                font-size: 18px;
                color: #ff7f51;
                font-weight: 500;
                text-decoration: none;
                margin-left: 40px;
            }
            .navbar a::before{
                content: '';
                position: absolute;
                top: 100%;
                left: 0;
                width: 0;
                height: 2px;
                background: #ff7f51;
                transition: .3s;
            }
            .navbar a:hover::before {
                width: 100%;
            }
            .navbar input[type=text] {
                float: right;
                padding: 6px;
                border: none;
                margin-top: 8px;
                margin-right: 16px;
                font-size: 17px;
            }

            @media screen and (max-width: 600px) {
                .navbar a, .topnav input[type=text] {
                    float: none;
                    display: block;
                    text-align: left;
                    width: 100%;
                    margin: 0;
                    padding: 14px;
                }
                .navbar input[type=text] {
                    border: 1px solid #ccc;
                }
            }
            
            .center{
                position: absolute; 
                top: 50%;
                width: 100;
                

            }
            footer {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 100%;
                color: #ff7f51;
                text-align: center;
            }
            
        block head-block
    body 
        header(class='header') 
            a(class='logo') NEUBYTES

            nav(class='navbar') 
                    a(href = "/" class='home') Home 
                    a(href = "/login" class='login') Login 
                    a(href = "/profile" class='profile') Profile
            
                    
            
            nav(class='navbar')
                a(href = "/breakfast") BREAKFAST 
                //button.tablink(onclick="openPage('breakfast', this, 'red')") BREAKFAST
                a(href = "/lunch") LUNCH 
                a(href = "/dinner") DINNER 
                a(href = "/dessert") DESSERT 
                    
            nav(class='navbar')
                input(type='text' placeholder='Search...' name='search')
                
        section(class = "content")

